    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "game.client"
        },
        {
            "name": "Nose",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "python": "${config.python.pythonPath}",
            "program": "${workspaceRoot}/.vscode/run_nose.py",
            "cwd": "${workspaceRoot}",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ],
            "args": [
                "${file}", // currently selected file
                "-v", // additional nose parameters â€“
                "-s" // tweak to your liking
            ]
        }
    ]
}